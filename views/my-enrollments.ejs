  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // ÌéòÏù¥ÏßÄ Î°úÎìú Ïãú ÌÜµÍ≥Ñ ÏóÖÎç∞Ïù¥Ìä∏
      updateStatistics();

      // Í≤ÄÏÉâ Î∞è ÌïÑÌÑ∞ Ïù¥Î≤§Ìä∏
      document.getElementById('searchInput').addEventListener('input', filterEnrollments);
      document.getElementById('statusFilter').addEventListener('change', filterEnrollments);
      document.getElementById('categoryFilter').addEventListener('change', filterEnrollments);
    });

    function updateStatistics() {
      const cards = document.querySelectorAll('.enrollment-card');
      console.log('üìä Ï∞æÏùÄ Ïπ¥Îìú Ïàò:', cards.length);
      
      let wishlist = 0;
      let active = 0;
      let completed = 0;

      cards.forEach((card, index) => {
        const status = card.dataset.status;
        console.log(`üìä Ïπ¥Îìú ${index + 1} ÏÉÅÌÉú:`, status);
        
        if (status === 'wishlist') {
          wishlist++;
        } else if (status === 'in-progress') {
          // ÏßÑÌñâ Ï§ë: Í¥ÄÎ¶¨ÏûêÍ∞Ä Ïã§Ï†úÎ°ú ÏßÑÌñâ Ï§ëÏúºÎ°ú Î≥ÄÍ≤ΩÌïú ÏÉÅÌÉúÎßå Ìè¨Ìï®
          active++;
        } else if (status === 'completed') {
          completed++;
        }
        // pending ÏÉÅÌÉúÎäî ÏïÑÏßÅ Í¥ÄÎ¶¨Ïûê ÏäπÏù∏ ÎåÄÍ∏∞ Ï§ëÏù¥ÎØÄÎ°ú ÏßÑÌñâ Ï§ëÏóê Ìè¨Ìï®ÌïòÏßÄ ÏïäÏùå
      });

      // Ï¥ù Îì±Î°ù = ÏäπÏù∏Îê® + ÏßÑÌñâ Ï§ë + ÏôÑÎ£å (Ï∞úÌïòÍ∏∞ÏôÄ ÎåÄÍ∏∞ Ï§ëÏùÄ Ï†úÏô∏)
      let confirmed = 0;
      cards.forEach((card) => {
        if (card.dataset.status === 'confirmed') {
          confirmed++;
        }
      });
      const actualTotal = confirmed + active + completed;

      console.log('üìä ÏµúÏ¢Ö ÌÜµÍ≥Ñ:', { wishlist, active, completed, actualTotal });

      document.getElementById('wishlistEnrollments').textContent = wishlist;
      document.getElementById('totalEnrollments').textContent = actualTotal;
      document.getElementById('activeEnrollments').textContent = active;
      document.getElementById('completedEnrollments').textContent = completed;
    }

    function filterEnrollments() {
      const searchTerm = document.getElementById('searchInput').value.toLowerCase();
      const statusFilter = document.getElementById('statusFilter').value;
      const categoryFilter = document.getElementById('categoryFilter').value;
      
      const cards = document.querySelectorAll('.enrollment-card');
      
      cards.forEach(card => {
        const title = card.querySelector('h5').textContent.toLowerCase();
        const status = card.dataset.status;
        const category = card.dataset.category;
        
        const matchesSearch = title.includes(searchTerm);
        const matchesStatus = !statusFilter || status === statusFilter;
        const matchesCategory = !categoryFilter || category === categoryFilter;
        
        if (matchesSearch && matchesStatus && matchesCategory) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }

    // Îì±Î°ù Ï∑®ÏÜå Ìï®Ïàò
    function cancelEnrollment(enrollmentId) {
      console.log('üéØ Ï∑®ÏÜå Ìï®Ïàò Ìò∏Ï∂úÎê®:', enrollmentId);
      
      const confirmResult = confirm('Ï†ïÎßêÎ°ú Ïù¥ Îì±Î°ùÏùÑ Ï∑®ÏÜåÌïòÏãúÍ≤†ÏäµÎãàÍπå?');
      console.log('‚ùì ÏÇ¨Ïö©Ïûê ÌôïÏù∏ Í≤∞Í≥º:', confirmResult);
      
      if (!confirmResult) {
        console.log('‚ùå ÏÇ¨Ïö©ÏûêÍ∞Ä Ï∑®ÏÜåÌï®');
        return;
      }

      console.log('üîÑ Ï∑®ÏÜå ÏöîÏ≤≠ ÏãúÏûë:', enrollmentId);
      console.log('üîó ÏöîÏ≤≠ URL:', `/api/enrollments/${enrollmentId}/cancel`);
      
      fetch(`/api/enrollments/${enrollmentId}/cancel`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        credentials: 'include'
      })
      .then(response => {
        console.log('üì° ÏùëÎãµ ÏÉÅÌÉú:', response.status, response.statusText);
        
        if (response.status === 401) {
          console.log('‚ùå 401 Ïù∏Ï¶ù Ïò§Î•ò');
          showToast('Î°úÍ∑∏Ïù∏Ïù¥ ÌïÑÏöîÌï©ÎãàÎã§. Îã§Ïãú Î°úÍ∑∏Ïù∏Ìï¥Ï£ºÏÑ∏Ïöî.', 'error');
          setTimeout(() => window.location.href = '/login', 1500);
          throw new Error('Authentication required');
        }
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        return response.json();
      })
      .then(data => {
        console.log('‚úÖ Ï∑®ÏÜå ÏùëÎãµ Îç∞Ïù¥ÌÑ∞:', data);
        
        if (data && data.success) {
          showToast('Îì±Î°ùÏù¥ ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Ï∑®ÏÜåÎêòÏóàÏäµÎãàÎã§.', 'success');
          setTimeout(() => location.reload(), 1500);
        } else if (data) {
          showToast(data.message || 'Îì±Î°ù Ï∑®ÏÜåÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.', 'error');
        }
      })
      .catch(error => {
        console.error('‚ùå Ï∑®ÏÜå Ïò§Î•ò:', error);
        if (error.message !== 'Authentication required') {
          showToast('Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§: ' + error.message, 'error');
        }
      });
    }

    // ÏàòÎ£åÏ¶ù Îã§Ïö¥Î°úÎìú Ìï®Ïàò
    function downloadCertificate(enrollmentId) {
      fetch(`/api/enrollments/${enrollmentId}/certificate`, {
        method: 'GET',
        credentials: 'include'
      })
      .then(response => {
        if (response.ok) {
          return response.blob();
        } else {
          throw new Error('ÏàòÎ£åÏ¶ùÏùÑ Ï∞æÏùÑ Ïàò ÏóÜÏäµÎãàÎã§.');
        }
      })
      .then(blob => {
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.style.display = 'none';
        a.href = url;
        a.download = `certificate_${enrollmentId}.pdf`;
        document.body.appendChild(a);
        a.click();
        window.URL.revokeObjectURL(url);
        document.body.removeChild(a);
        showToast('ÏàòÎ£åÏ¶ù Îã§Ïö¥Î°úÎìúÍ∞Ä ÏãúÏûëÎê©ÎãàÎã§.', 'success');
      })
      .catch(error => {
        console.error('Error:', error);
        showToast('ÏàòÎ£åÏ¶ù Îã§Ïö¥Î°úÎìúÏóê Ïã§Ìå®ÌñàÏäµÎãàÎã§.', 'error');
      });
    }

    // Ï∞úÌïòÍ∏∞ÏóêÏÑú Îì±Î°ùÌïòÍ∏∞ Ìï®Ïàò
    function enrollFromWishlist(enrollmentId) {
      // Í∞ÑÎã®Ìïú Îì±Î°ù Ï†ïÎ≥¥Î°ú Ï†ÑÌôò (Ïã§Ï†úÎ°úÎäî Î™®Îã¨ÏùÑ ÎùÑÏõåÏÑú ÏÉÅÏÑ∏ Ï†ïÎ≥¥ ÏûÖÎ†•Î∞õÏùÑ Ïàò ÏûàÏùå)
      if (!confirm('Ïù¥ ÌîÑÎ°úÍ∑∏Îû®ÏùÑ Ï†ïÏãùÏúºÎ°ú Îì±Î°ùÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) {
        return;
      }

      const studentData = {
        student: {
          name: 'ÌïôÏÉù', // Ïã§Ï†úÎ°úÎäî ÏÇ¨Ïö©Ïûê ÏûÖÎ†•
          age: 15 // Ïã§Ï†úÎ°úÎäî ÏÇ¨Ïö©Ïûê ÏûÖÎ†•
        },
        emergencyContact: {
          name: 'ÎπÑÏÉÅÏó∞ÎùΩÏ≤ò', // Ïã§Ï†úÎ°úÎäî ÏÇ¨Ïö©Ïûê ÏûÖÎ†•
          phone: '010-0000-0000' // Ïã§Ï†úÎ°úÎäî ÏÇ¨Ïö©Ïûê ÏûÖÎ†•
        }
      };

      fetch(`/api/enrollments/${enrollmentId}/enroll`, {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(studentData)
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showToast('ÏÑ±Í≥µÏ†ÅÏúºÎ°ú Îì±Î°ùÎêòÏóàÏäµÎãàÎã§.', 'success');
