    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Hero Slider 초기화
        initHeroSlider();
        
        // Program Swiper 초기화 - 완전 커스텀 네비게이션
        const programSwiper = new Swiper('.program-swiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: false,
          initialSlide: 0,
          speed: 600,
          allowTouchMove: true,
          autoplay: false,
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
            dynamicBullets: true,
          },
          navigation: false, // 기본 네비게이션 비활성화
          breakpoints: {
            576: {
              slidesPerView: 1,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 2,
              spaceBetween: 25,
            },
            992: {
              slidesPerView: 3,
              spaceBetween: 30,
            }
          }
        });

        // 완전 커스텀 네비게이션
        const nextButton = document.querySelector('.swiper-button-next');
        const prevButton = document.querySelector('.swiper-button-prev');
        
        // 다음 버튼
        nextButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const current = programSwiper.activeIndex;
          const total = programSwiper.slides.length;
          
          console.log('Next: current =', current, 'total =', total);
          
          if (current >= total - 1) {
            // 마지막 슬라이드면 첫 번째로
            programSwiper.slideTo(0, 600);
            console.log('Going to first slide');
          } else {
            // 다음 슬라이드로
            programSwiper.slideTo(current + 1, 600);
            console.log('Going to slide', current + 1);
          }
        });
        
        // 이전 버튼
        prevButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const current = programSwiper.activeIndex;
          const total = programSwiper.slides.length;
          
          console.log('Prev: current =', current, 'total =', total);
          
          if (current <= 0) {
            // 첫 번째 슬라이드면 마지막으로
            programSwiper.slideTo(total - 1, 600);
            console.log('Going to last slide', total - 1);
          } else {
            // 이전 슬라이드로
            programSwiper.slideTo(current - 1, 600);
            console.log('Going to slide', current - 1);
          }
        });

        // Testimonial Swiper 초기화
        const testimonialSwiper = new Swiper('.testimonial-slider', {
          slidesPerView: 1,
          spaceBetween: 20,
          loop: true,
          speed: 600,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: '.testimonial-slider .swiper-pagination',
            clickable: true,
          },
          breakpoints: {
            768: {
              slidesPerView: 2,
            },
            992: {
              slidesPerView: 3,
            }
          }
        });

        // Testimonial 카드 클릭 시 모달 표시 기능
        setTimeout(() => {
          const testimonialSlider = document.querySelector('.testimonial-slider');
          if (testimonialSlider && testimonialSwiper) {
            console.log('🎯 Testimonial 슬라이더 초기화 완료 - 모달 기능 추가');
            
            // 각 슬라이드 카드에 클릭 이벤트 추가
            const slides = testimonialSlider.querySelectorAll('.swiper-slide');
            slides.forEach((slide, index) => {
              slide.style.cursor = 'pointer'; // 클릭 가능하다는 표시
              
              slide.addEventListener('click', function() {
                console.log(`📖 Testimonial 카드 ${index + 1} 클릭 - 모달 표시`);
                showTestimonialModal(slide, index);
              });
            });
            
          } else {
            console.log('❌ Testimonial 슬라이더 또는 Swiper 인스턴스를 찾을 수 없음');
          }
        }, 1000);
        
        // Testimonial 모달 표시 함수
        function showTestimonialModal(slideElement, index) {
          // 카드 데이터 추출 (실제 HTML 구조에 맞게 수정)
          const nameElement = slideElement.querySelector('h5');
          const roleElement = slideElement.querySelector('p.text-muted');
          const textElement = slideElement.querySelector('.testimonial-text');
          const starsElement = slideElement.querySelector('.testimonial-stars');
          
          const name = nameElement?.textContent?.trim() || '';
          const role = roleElement?.textContent?.trim() || '';
          const text = textElement?.textContent?.trim() || '';
          
          // 별점 HTML 추출
          const starsHTML = starsElement?.innerHTML || '';
          
          console.log('📖 모달 데이터 추출:', { name, role, text, starsHTML });
          
          // 모달 HTML 생성 (깔끔한 버전)
          const modalHTML = `
            <div class="testimonial-modal-overlay" id="testimonialModal">
              <div class="testimonial-modal-content">
                <div class="testimonial-modal-header">
                  <button class="testimonial-modal-close" id="testimonialModalClose">&times;</button>
                </div>
                <div class="testimonial-modal-body">
                  ${name ? `<div class="testimonial-modal-name">${name}</div>` : ''}
                  ${role ? `<div class="testimonial-modal-role">${role}</div>` : ''}
                  ${starsHTML ? `<div class="testimonial-modal-stars text-warning mb-3">${starsHTML}</div>` : ''}
                  <div class="testimonial-modal-text">${text}</div>
                </div>
              </div>
            </div>
          `;
          
          // 모달을 body에 추가
          document.body.insertAdjacentHTML('beforeend', modalHTML);
          
          // 모달 표시 애니메이션
          setTimeout(() => {
            const modal = document.getElementById('testimonialModal');
            if (modal) {
              modal.classList.add('show');
            }
          }, 10);
          
          // X 버튼 클릭 이벤트 추가
          const closeBtn = document.getElementById('testimonialModalClose');
          if (closeBtn) {
            closeBtn.addEventListener('click', function() {
              console.log('❌ X 버튼 클릭 - 모달 닫기');
              closeTestimonialModal();
            });
          }
          
          // 모달 배경 클릭 시 닫기
          const modal = document.getElementById('testimonialModal');
          if (modal) {
            modal.addEventListener('click', function(e) {
              if (e.target === modal) {
                console.log('🖱️ 모달 배경 클릭 - 모달 닫기');
                closeTestimonialModal();
              }
            });
          }
          
          // ESC 키로 모달 닫기
          const escapeHandler = function(e) {
            if (e.key === 'Escape') {
              console.log('⌨️ ESC 키 - 모달 닫기');
              closeTestimonialModal();
              document.removeEventListener('keydown', escapeHandler);
            }
          };
          document.addEventListener('keydown', escapeHandler);
        }
        
        // Testimonial 모달 닫기 함수 (전역 함수로 정의)
        window.closeTestimonialModal = function() {
          console.log('🔒 모달 닫기 함수 호출됨');
          const modal = document.getElementById('testimonialModal');
          if (modal) {
            modal.classList.remove('show');
            setTimeout(() => {
              modal.remove();
              console.log('✅ 모달 완전히 제거됨');
            }, 300);
          } else {
            console.log('❌ 모달을 찾을 수 없음');
          }
        };

        // Hero Slider 함수
        function initHeroSlider() {
          const slides = document.querySelectorAll('.hero-slide');
          const indicators = document.querySelectorAll('.indicator');
          let currentSlide = 0;
          let isTransitioning = false;

          // 자동 슬라이드 타이머
          let autoSlideTimer;

          function showSlide(index) {
            if (isTransitioning) return;
            isTransitioning = true;

            // 모든 슬라이드 비활성화
            slides.forEach(slide => {
              slide.classList.remove('active');
            });

            // 모든 인디케이터 비활성화
            indicators.forEach(indicator => {
              indicator.classList.remove('active');
            });

            // 새 슬라이드 활성화
            slides[index].classList.add('active');
            indicators[index].classList.add('active');

            currentSlide = index;

            // 트랜지션 완료 후 플래그 리셋
            setTimeout(() => {
              isTransitioning = false;
            }, 1500);
          }

          function nextSlide() {
            const next = (currentSlide + 1) % slides.length;
            showSlide(next);
          }

          function startAutoSlide() {
            autoSlideTimer = setInterval(nextSlide, 5000); // 5초마다 자동 슬라이드
          }

          function stopAutoSlide() {
            clearInterval(autoSlideTimer);
          }

          // 인디케이터 클릭 이벤트
          indicators.forEach((indicator, index) => {
            indicator.addEventListener('click', () => {
              stopAutoSlide();
              showSlide(index);
              startAutoSlide(); // 클릭 후 다시 자동 슬라이드 시작
            });
          });

          // 호버 시 자동 슬라이드 일시정지
          const heroSection = document.querySelector('.hero-section');
          heroSection.addEventListener('mouseenter', stopAutoSlide);
          heroSection.addEventListener('mouseleave', startAutoSlide);

          // 자동 슬라이드 시작
          startAutoSlide();
        }
      });
    </script>
