    <style>
      .hero-section {
        margin-top: 0; /* 마진 제거 */
        height: 100vh; /* 전체 화면 높이로 설정 */
        overflow: hidden; /* 넘치는 부분 숨김 */
        position: relative; /* 상대 위치 설정 */
      }
      
      .hero-bg {
        z-index: 0; /* 배경의 z-index 설정 */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
      }
      
      .overlay {
        z-index: 1; /* 오버레이 z-index */
      }
      
      .container.position-relative.z-index-1 {
        z-index: 2; /* 컨텐츠 z-index */
      }
      
      .hero-scroll-indicator {
        z-index: 2; /* 스크롤 인디케이터 z-index */
      }
      
      /* Hero Slider Styles */
      .hero-slider {
        position: relative;
        width: 100%;
        height: 100%;
      }
      
      .hero-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1.5s ease-in-out;
        z-index: 1;
      }
      
      .hero-slide.active {
        opacity: 1;
        z-index: 2;
      }
      
      .hero-slide img {
        transition: transform 8s ease-in-out;
      }
      
      .hero-slide.active img {
        transform: scale(1.05);
      }
      
      /* Hero Indicators */
      .hero-indicators {
        display: flex;
        gap: 12px;
        z-index: 10;
      }
      
      .indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.6);
        background: transparent;
        cursor: pointer;
        transition: all 0.3s ease;
      }
      
      .indicator.active {
        background: white;
        border-color: white;
        transform: scale(1.2);
      }
      
      .indicator:hover {
        border-color: white;
        background: rgba(255, 255, 255, 0.8);
      }
      
      /* 애니메이션 효과 */
      .hero-title span {
        animation: fadeInUp 1s ease-out forwards;
        opacity: 0;
      }
      
      .hero-title span:nth-child(1) {
        animation-delay: 0.3s;
      }
      
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      /* 스크롤 아이콘 애니메이션 */
      .bounce {
        animation: bounce 2s infinite;
      }
      
      @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
          transform: translateY(0);
        }
        40% {
          transform: translateY(-10px);
        }
        60% {
          transform: translateY(-5px);
        }
      }
    </style>

