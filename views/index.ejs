    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Program Swiper 초기화 - 완전 커스텀 네비게이션
        const programSwiper = new Swiper('.program-swiper', {
          slidesPerView: 1,
          spaceBetween: 30,
          loop: false,
          initialSlide: 0,
          speed: 600,
          allowTouchMove: true,
          autoplay: false,
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
            dynamicBullets: true,
          },
          navigation: false, // 기본 네비게이션 비활성화
          breakpoints: {
            576: {
              slidesPerView: 1,
              spaceBetween: 20,
            },
            768: {
              slidesPerView: 2,
              spaceBetween: 25,
            },
            992: {
              slidesPerView: 3,
              spaceBetween: 30,
            }
          }
        });

        // 완전 커스텀 네비게이션
        const nextButton = document.querySelector('.swiper-button-next');
        const prevButton = document.querySelector('.swiper-button-prev');
        
        // 다음 버튼
        nextButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const current = programSwiper.activeIndex;
          const total = programSwiper.slides.length;
          
          console.log('Next: current =', current, 'total =', total);
          
          if (current >= total - 1) {
            // 마지막 슬라이드면 첫 번째로
            programSwiper.slideTo(0, 600);
            console.log('Going to first slide');
          } else {
            // 다음 슬라이드로
            programSwiper.slideTo(current + 1, 600);
            console.log('Going to slide', current + 1);
          }
        });
        
        // 이전 버튼
        prevButton.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          
          const current = programSwiper.activeIndex;
          const total = programSwiper.slides.length;
          
          console.log('Prev: current =', current, 'total =', total);
          
          if (current <= 0) {
            // 첫 번째 슬라이드면 마지막으로
            programSwiper.slideTo(total - 1, 600);
            console.log('Going to last slide', total - 1);
          } else {
            // 이전 슬라이드로
            programSwiper.slideTo(current - 1, 600);
            console.log('Going to slide', current - 1);
          }
        });

        // Testimonial Swiper 초기화
        new Swiper('.testimonial-slider', {
          slidesPerView: 1,
          spaceBetween: 20,
          loop: true,
          speed: 600,
          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          pagination: {
            el: '.testimonial-slider .swiper-pagination',
            clickable: true,
          },
          breakpoints: {
            768: {
              slidesPerView: 2,
            },
            992: {
              slidesPerView: 3,
            }
          }
        });
      });
    </script>
