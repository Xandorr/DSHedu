  <style>
    /* Program Detail Specific Styles */
    .program-hero {
      background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
      position: relative;
      overflow: hidden;
    }
    
    .program-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url('<%= program.image %>') center/cover;
      opacity: 0.1;
      z-index: 0;
    }
    
    .program-hero .container {
      position: relative;
      z-index: 1;
    }
    
    .program-image-section {
      position: relative;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    }
    
    .program-image-section img {
      width: 100%;
      height: 400px;
      object-fit: cover;
      transition: transform 0.5s ease;
    }
    
    .program-image-section:hover img {
      transform: scale(1.05);
    }
    
    .program-badge {
      position: absolute;
      top: 20px;
      right: 20px;
      z-index: 2;
    }
    
        .info-card {
      background: white;
      border-radius: 15px;
      box-shadow: none;
      transition: all 0.3s ease;
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .info-card:hover {
      transform: translateY(-3px);
      box-shadow: none;
    }
    
    .info-icon {
      width: 50px;
      height: 50px;
      background: linear-gradient(135deg, #4361ee, #3a0ca3);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 1.2rem;
    }
    
    .feature-item {
      background: #f8f9ff;
      border-radius: 12px;
      padding: 15px;
      margin-bottom: 15px;
      border-left: 4px solid #4361ee;
      transition: all 0.3s ease;
    }
    
    .feature-item:hover {
      background: #f0f2ff;
      transform: translateX(5px);
    }
    
    .feature-item .fw-500 {
      color: #2d3748 !important;
      font-weight: 500;
    }
    
    .feature-icon {
      width: 30px;
      height: 30px;
      background: linear-gradient(135deg, #4361ee, #3a0ca3);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 0.8rem;
    }
    
    .sticky-sidebar {
      position: sticky;
      top: 100px;
      max-height: calc(100vh - 120px);
      overflow-y: auto;
    }
    
    .program-details-container {
      position: relative;
    }
    
    .main-content-col {
      position: relative;
    }
    
    .content-end-marker {
      visibility: hidden;
      pointer-events: none;
    }
    
    /* 사이드바 부모 컨테이너 높이 제한 */
    .col-lg-4 {
      position: relative;
    }
    
    .cta-card {
      background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);
      border-radius: 20px;
      color: white;
      padding: 30px;
      text-align: center;
      box-shadow: none;
    }
    
    .price-tag {
      background: rgba(255, 255, 255, 0.25);
      border-radius: 15px;
      padding: 15px;
      margin-bottom: 20px;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .price-tag h3 {
      color: white !important;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .price-tag p {
      color: rgba(255, 255, 255, 0.9) !important;
    }
    
    .btn-cta {
