  // ìœ„ì¹˜ ì •ë³´ë¥¼ ë¬¸ìì—´ë¡œ ë³€í™˜í•˜ëŠ” í•¨ìˆ˜
  function formatLocation(location) {
    if (!location) return 'ìœ„ì¹˜ ì •ë³´ ì—†ìŒ';
    if (typeof location === 'string') return location;
    if (typeof location === 'object') {
      const parts = [];
      if (location.name) parts.push(location.name);
      if (location.city && location.city !== location.name) parts.push(location.city);
      if (location.state && location.state !== location.city) parts.push(location.state);
      if (location.country && location.country !== 'USA') parts.push(location.country);
      
