  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- AOS Animation Library -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  
  <!-- Initialize AOS -->
  <script>
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });

    // Smooth scroll for CTA button
    document.querySelector('a[href="#contact-section"]').addEventListener('click', function(e) {
      e.preventDefault();
      document.querySelector('#contact-section').scrollIntoView({
        behavior: 'smooth',
        block: 'center'
      });
    });

    // Sticky sidebar height control  
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.querySelector('.sticky-sidebar');
      const mainContent = document.querySelector('.main-content-col');
      
      if (sidebar && mainContent && window.innerWidth > 991) {
        // 메인 컨텐츠 끝에 마커 요소 추가
        const endMarker = document.createElement('div');
        endMarker.style.height = '1px';
        endMarker.style.position = 'absolute';
        endMarker.style.bottom = '50px';
        endMarker.style.left = '0';
        endMarker.className = 'content-end-marker';
        mainContent.appendChild(endMarker);
        
        // Intersection Observer로 마커 감지
        const observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting) {
              // 메인 컨텐츠 끝에 도달하면 사이드바를 절대 위치로 고정
              const mainContentRect = mainContent.getBoundingClientRect();
              const sidebarHeight = sidebar.offsetHeight;
              const topPosition = Math.max(0, mainContentRect.height - sidebarHeight - 50);
              
              sidebar.style.position = 'absolute';
              sidebar.style.top = topPosition + 'px';
            } else {
              // 메인 컨텐츠 중간이면 일반 sticky 동작
              sidebar.style.position = 'sticky';
              sidebar.style.top = '100px';
            }
          });
        }, {
          rootMargin: '0px 0px -10% 0px',
          threshold: 0
        });
        
        observer.observe(endMarker);
        
        // 리사이즈 시 재계산
        window.addEventListener('resize', function() {
          if (window.innerWidth <= 991) {
            sidebar.style.position = 'static';
            sidebar.style.top = 'auto';
          }
        });
      }
    });
  </script>
</body>
