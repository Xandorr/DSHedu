  function formatAgeRange(ageRange) {
    if (!ageRange) return 'ì—°ë ¹ ì •ë³´ ì—†ìŒ';
    if (typeof ageRange === 'string') return ageRange;
    if (typeof ageRange === 'object' && ageRange.min !== undefined && ageRange.max !== undefined) {
