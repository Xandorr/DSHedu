      color: #03C75A;
    }

    .social-btn:hover .google-icon {
      background-color: white;
      color: #EA4335;
    }

    .fw-semi-bold {
      font-weight: 600;
    }

    .terms-section {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 1.5rem;
      border: 1px solid #e9ecef;
    }

    /* 입력 필드 텍스트 크기 조정 */
    #name, #email, #phone, #role {
      font-size: 0.85rem;
    }
    
    #role option {
      font-size: 0.85rem;
    }

  </style>

  <script>
    // Form validation
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        const forms = document.getElementsByClassName('needs-validation');
        Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();

    // Enhanced form interactions
    document.addEventListener('DOMContentLoaded', function() {
      const inputs = document.querySelectorAll('.form-control');
      
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          this.parentElement.classList.add('focused');
        });
        
        input.addEventListener('blur', function() {
          if (!this.value) {
            this.parentElement.classList.remove('focused');
          }
        });
      });

      // Password confirmation validation
      const password = document.getElementById('password');
      const confirmPassword = document.getElementById('confirmPassword');

      function validatePassword() {
        if (password.value !== confirmPassword.value) {
          confirmPassword.setCustomValidity('비밀번호가 일치하지 않습니다.');
        } else {
          confirmPassword.setCustomValidity('');
        }
      }

      password.addEventListener('change', validatePassword);
      confirmPassword.addEventListener('keyup', validatePassword);

      // Role selection debugging
      const roleSelect = document.getElementById('role');
      if (roleSelect) {
        roleSelect.addEventListener('change', function() {
          console.log('역할 선택됨:', this.value);
        });
      }

      // Form submission debugging
      const form = document.querySelector('.register-form');
      if (form) {
        form.addEventListener('submit', function(e) {
          const roleValue = document.getElementById('role').value;
          console.log('폼 제출 시 역할 값:', roleValue);
          console.log('폼 데이터:', new FormData(this));
        });
      }

      // Terms agreement handling
      const termsAll = document.getElementById('termsAll');
      const terms1 = document.getElementById('terms1');
      const terms2 = document.getElementById('terms2');
      const terms3 = document.getElementById('terms3');

      termsAll.addEventListener('change', function() {
        const isChecked = this.checked;
        terms1.checked = isChecked;
        terms2.checked = isChecked;
        terms3.checked = isChecked;
      });

      [terms1, terms2, terms3].forEach(checkbox => {
        checkbox.addEventListener('change', function() {
          termsAll.checked = terms1.checked && terms2.checked && terms3.checked;
        });
      });

      // Phone number formatting
      const phoneInput = document.getElementById('phone');
      phoneInput.addEventListener('input', function() {
        let value = this.value.replace(/\D/g, '');
        if (value.length >= 11) {
          value = value.replace(/(\d{3})(\d{4})(\d{4})/, '$1-$2-$3');
        } else if (value.length >= 7) {
          value = value.replace(/(\d{3})(\d{3})(\d+)/, '$1-$2-$3');
        } else if (value.length >= 4) {
          value = value.replace(/(\d{3})(\d+)/, '$1-$2');
        }
        this.value = value;
      });
    });
  </script>
</body>
</html> 